<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/onSeasonParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:id="@+id/onSeasonHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pagerGameLarge"
                        android:layout_width="match_parent"
                        android:layout_height="198dp"
                        android:visibility="visible">

                    </androidx.viewpager.widget.ViewPager>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ticketArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:showDividers="middle">

                        <ImageView
                            android:id="@+id/headBanner1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/view_shadow"
                            app:layout_constraintBottom_toTopOf="@+id/tip_head"
                            app:layout_constraintEnd_toStartOf="@+id/headBanner2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/headBanner2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/view_shadow"
                            app:layout_constraintBottom_toTopOf="@+id/tip_head"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/headBanner1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginStart="0dp" />

                        <ImageView
                            android:id="@+id/headBanner0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@+id/tip_head"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginBottom="0dp"
                            tools:src="@drawable/bg_day_compact" />

                        <ImageView
                            android:id="@+id/tip_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:src="@drawable/bg_day_compact" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:id="@+id/offSeasonHeader"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:orientation="vertical"
                        app:layout_collapseMode="pin">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:contentDescription="@string/app_name"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/hd_bg" />

                            <ImageView
                                android:layout_width="84dp"
                                android:layout_height="22dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="11dp"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/hd_logo" />
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/headerArea"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pagerGameSmall"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/view_shadow_transparent" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>




            <LinearLayout
                android:id="@+id/tabTopContents"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="bottom"
                android:background="#f4f4f4"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/radioTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/top_tab_selector_team" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/radioBallpark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/top_tab_selector_ballpark" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/radioSns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/top_tab_selector_sns">

                    </ImageView>
                </FrameLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>